    "setup": "echo 'Setup complete'"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-perfectionist": "^2.11.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "prettier": "^3.2.5",
    "typescript": "^5.5.0",
    "turbo": "^2.0.6"
  }
}

